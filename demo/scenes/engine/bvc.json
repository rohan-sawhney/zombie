{
    "solverType": "bvc",
    "solver": {
        "boundaryCacheSize": 6144,
        "domainCacheSize": 6144,
        "nWalksForCachedSolutionEstimates": 96,
        "nWalksForCachedGradientEstimates": 960,
        "maxWalkLength": 1024,
        "epsilonShellForDirichlet": 1e-3,
